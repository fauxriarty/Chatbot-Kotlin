<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F7F8FC"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/therapy_via_fiction"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <Spinner
                    android:id="@+id/characterSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"/>

            </androidx.cardview.widget.CardView>

            <!-- Small menu icon to open favorites -->
            <ImageView
                android:id="@+id/favoritesMenuIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_more"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/open_favorites"
                android:background="?attr/selectableItemBackgroundBorderless" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18sp"
                android:contentDescription="@string/chat_history"
                android:clickable="true"
                android:longClickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:minWidth="48dp"/>
        </ScrollView>

        <EditText
            android:id="@+id/chatInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:autofillHints="none"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:hint="@string/hint_message"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#333333"
            android:textColorHint="#757575" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addToFavoritesButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="#B0BEC5"
                android:elevation="2dp"
                android:padding="12dp"
                android:text="@string/add_to_favorites"
                android:textColor="#0D47A1" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:text="@string/send"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

    </LinearLayout>
</layout>
